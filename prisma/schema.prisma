
generator client {
  provider = "prisma-client-js"
  // output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// You may want a User model as well for relations:
model User {
  id            String        @id @default(cuid())
  email         String        @unique
  name          String?
  password      String?       // For credential-based login (admins)
  emailVerified DateTime?
  image         String?
  isBlocked     Boolean       @default(false)
  blockedAt     DateTime?
  blockedReason String?
  role          String        @default("user") // "user" or "admin"
  
  // Profile fields
  profileCompleted Boolean      @default(false)
  phone            String?
  companyName      String?
  companyWebsite   String?
  companySize      String?      // e.g., "1-10", "11-50", "51-200", etc.
  industry         String?
  jobTitle         String?      // User's current job title
  linkedinUrl      String?
  githubUrl        String?
  portfolioUrl     String?
  bio              String?      // Short bio/about
  location         String?      // User's location
  lastSeen         DateTime?    // Last activity timestamp for online status
  
  accounts      Account[]
  sessions      Session[]
  jobs          Job[] // Relation field for jobs posted by the user
  applications  Application[]
  receivedMessages AdminMessage[] @relation("MessageRecipient")
  
  // Chat relationships
  sentMessages     Message[] @relation("SentMessages")
  receivedChatMessages Message[] @relation("ReceivedMessages")
}

model Job {
  id           String        @id @default(cuid())
  title        String
  description  String
  company      String
  location     String
  type         String
  salary       Float?
  isBlocked    Boolean       @default(false)
  isHidden     Boolean       @default(false)
  blockedAt    DateTime?
  blockedReason String?
  postedAt     DateTime      @default(now())
  postedById   String
  postedBy     User          @relation(fields: [postedById], references: [id], onDelete: Cascade)
  applications Application[]
  adminMessages AdminMessage[]
}

model Application {
  id                  String   @id @default(cuid())
  userId              String
  jobId               String
  coverLetter         String
  phoneNumber         String
  status              String?
  linkedin            String?
  github              String?
  portfolio           String?
  resumeUrl           String? // URL to access the resume
  resumeFile          Bytes? // Actual PDF binary data
  resumeFileName      String? // Original filename
  resumeFileType      String? // MIME type (e.g., "application/pdf")
  isDeletedByUser     Boolean  @default(false)
  isDeletedByEmployer Boolean  @default(false)
  appliedAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  job  Job  @relation(fields: [jobId], references: [id])
}

model AdminMessage {
  id        String   @id @default(cuid())
  jobId     String?
  userId    String
  message   String
  sentBy    String
  isRead    Boolean  @default(false)
  sentAt    DateTime @default(now())
  job       Job?     @relation(fields: [jobId], references: [id], onDelete: Cascade)
  user      User     @relation("MessageRecipient", fields: [userId], references: [id], onDelete: Cascade)
}

model Message {
  id         String   @id @default(cuid())
  senderId   String
  receiverId String
  text       String
  read       Boolean  @default(false)
  edited     Boolean  @default(false)
  editedAt   DateTime?
  reaction   String?  // Emoji reaction (e.g., "üëç", "‚ù§Ô∏è", "üòÇ", etc.)
  createdAt  DateTime @default(now())
  
  sender   User @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)
  receiver User @relation("ReceivedMessages", fields: [receiverId], references: [id], onDelete: Cascade)
  
  @@index([senderId, receiverId])
  @@index([createdAt])
}
